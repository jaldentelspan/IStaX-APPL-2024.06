<html>

<head>
  <style>
    body    { font-family: "Arial" }
    table, th, td {border: 1px solid black; border-collapse: collapse; padding: 2px;}
    .red    {background-color:red;}
    .green  {background-color:green;}
    .yellow {background-color:yellow;}
  </style>
<% if @top_url %>
  <base href="<%= @top_url %>" target="">
<% else %>
  <base target="">
<% end %>
</head>

<body>

  <% @tables.each do |t| %>
  <table>
    <thead>
      <tr>
        <% t.header.cells.each do |c| %>
        <th <%= c.ccolor("class") %>><%= c.as_html %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% t.rows.each do |r| %>
      <tr>
        <% r.cells.each do |c| %>
        <td <%= c.ccolor("class") %>><%= c.as_html %></td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
  <p/>
  <% end %>

</body>

</html>
